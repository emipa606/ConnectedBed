<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="BedWithQualityBase">
    <defName>VNPE_ConnectedBed</defName>
    <label>connected bed</label>
    <description>A hospital bed with integrated nutrient paste dripper.</description>
    <thingClass>zed_0xff.VNPE.Building_ConnectedBed</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Bed/HospitalBed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <castEdgeShadows>True</castEdgeShadows>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>8000</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>1.0</Flammability>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.80</Comfort>
      <ImmunityGainSpeedFactor>1.11</ImmunityGainSpeedFactor>
      <MedicalTendQualityOffset>0.10</MedicalTendQualityOffset>
      <SurgerySuccessChanceFactor>1.1</SurgerySuccessChanceFactor>
      <BirthRitualQualityOffset MayRequire="Ludeon.RimWorld.Biotech">5</BirthRitualQualityOffset>
    </statBases>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>VitalsMonitor</li>
          <li>EndTable</li>
          <li>Dresser</li>
          <li MayRequire="Ludeon.RimWorld.Ideology">SleepAccelerator</li>
        </linkableFacilities>
      </li>
      <li Class="PipeSystem.CompProperties_Resource">
        <pipeNet>VNPE_NutrientPasteNet</pipeNet>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>25</basePowerConsumption>
      </li>
    </comps>
    <size>(1,2)</size>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>110</costStuffCount>
    <costList>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <building>
      <bed_showSleeperBody>False</bed_showSleeperBody>
      <bed_healPerDay>10</bed_healPerDay>
      <bed_defaultMedical>true</bed_defaultMedical>
      <buildingSizeCategory>Small</buildingSizeCategory>
      <paintable>true</paintable>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>42</pathCost>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <designationHotKey>Misc5</designationHotKey>
    <researchPrerequisites>
      <li>HospitalBed</li>
      <li>NutrientPaste</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <techLevel>Industrial</techLevel>
    <uiIconScale>0.90</uiIconScale>
    <designationCategory>VCHE_PipeNetworks</designationCategory>
    <tickerType>Rare</tickerType>
  </ThingDef>
</Defs>
